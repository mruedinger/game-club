---
import AppHeader from "../components/AppHeader.astro";
import "../styles/base.css";

type Game = {
	id: number;
	title: string;
	status: "backlog" | "current" | "played";
	tags_json?: string;
	time_to_beat_minutes?: number;
	played_month?: string;
};

const gamesResponse = await fetch(new URL("/api/games", Astro.url), {
	headers: Astro.request.headers
});
const games = gamesResponse.ok
	? await gamesResponse.json()
	: { backlog: [], current: [], played: [] };

const backlogGames = games.backlog as Game[];
const playedGames = games.played as Game[];
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content="Browse the Game Club backlog and played games." />
		<title>Game Club | Games</title>
	</head>
	<body>
		<AppHeader />

		<main>
			<section class="hero">
				<p class="eyebrow">Game library</p>
				<h1>Backlog and played games</h1>
				<p class="lead">
					Browse member-submitted games and revisit the titles we have already played
					together.
				</p>
			</section>

			<section class="section">
				<div class="section-head">
					<h2>Backlog</h2>
					<p>Games waiting to be picked in an upcoming poll.</p>
					<button class="cta add-game hidden" type="button">Add a game</button>
				</div>
				<div class="games-grid">
					{backlogGames.map((game, index) => (
						<article class="game-card" style={`animation-delay: ${index * 70}ms`}>
							<h3>{game.title}</h3>
							<p class="muted">
								{game.tags_json ? JSON.parse(game.tags_json).join(" · ") : "Tags coming soon"}
							</p>
							<div class="card-row">
								<span class="chip subtle">
									{game.time_to_beat_minutes
										? `${Math.round(game.time_to_beat_minutes / 60)} hrs`
										: "Time TBD"}
								</span>
								<span class="chip subtle">Submitted by A.</span>
							</div>
						</article>
					))}
				</div>
			</section>

			<section class="section">
				<div class="section-head">
					<h2>Played</h2>
					<p>Games the club has finished and discussed.</p>
				</div>
				<div class="games-grid">
					{playedGames.map((game, index) => (
						<article class="game-card" style={`animation-delay: ${index * 70}ms`}>
							<h3>{game.title}</h3>
							<p class="muted">
								{game.tags_json ? JSON.parse(game.tags_json).join(" · ") : "Tags coming soon"}
							</p>
							<div class="card-row">
								<span class="chip subtle">
									{game.time_to_beat_minutes
										? `${Math.round(game.time_to_beat_minutes / 60)} hrs`
										: "Time TBD"}
								</span>
								<span class="chip subtle">{game.played_month || "Played date TBD"}</span>
							</div>
						</article>
					))}
				</div>
			</section>
		</main>

		<dialog class="modal" id="add-game-modal">
			<form class="modal-card add-game-form" novalidate>
				<header>
					<h3>Add a game</h3>
					<button class="ghost icon-button" type="button" data-action="close-add-game" aria-label="Close">
						×
					</button>
				</header>
				<div class="field">
					<label for="game-title">Game title</label>
					<input id="game-title" name="title" type="text" placeholder="Search for a game" autocomplete="off" required />
				</div>
				<div class="suggestions" aria-live="polite"></div>
				<p class="muted small">Start typing to see suggestions.</p>
				<footer>
					<button class="ghost" type="button" data-action="close-add-game">Cancel</button>
					<button class="cta" type="submit">Submit</button>
				</footer>
			</form>
		</dialog>

		<script>
			const addButton = document.querySelector(".add-game");
			const addModal = document.querySelector("#add-game-modal");
			const addForm = document.querySelector(".add-game-form");
			const titleInput = document.querySelector("#game-title");
			const suggestionList = document.querySelector(".suggestions");
			let isSignedIn = false;

			fetch("/api/me")
				.then((response) => {
					if (!response.ok) throw new Error("Not authenticated");
					if (addButton) addButton.classList.remove("hidden");
					isSignedIn = true;
				})
				.catch(() => {});

			document.addEventListener("click", (event) => {
				const target = event.target;
				if (!(target instanceof HTMLElement)) return;
				if (target.closest(".add-game")) {
					if (!isSignedIn) {
						window.location.href = "/api/auth/login";
						return;
					}
					addModal?.showModal();
				}
				if (target.closest("[data-action='close-add-game']")) {
					addModal?.close();
				}
				if (target.closest(".suggestion-item") && titleInput) {
					const selected = target.closest(".suggestion-item");
					titleInput.value = selected?.dataset.name || selected?.textContent || "";
					clearSuggestions();
				}
			});

			bindSearch(titleInput, suggestionList);

			if (addForm) {
				addForm.addEventListener("submit", async (event) => {
					event.preventDefault();
					const title = titleInput?.value.trim();
					if (!title) return;
				const response = await fetch("/api/games", {
					method: "POST",
					headers: { "Content-Type": "application/json" },
					body: JSON.stringify({ title })
				});
					if (response.ok) {
						addModal?.close();
						window.location.reload();
					}
				});
			}

			function bindSearch(input, list) {
				if (!input || !list) return;
				let searchTimer;
				input.addEventListener("input", () => {
					const value = input.value.trim();
					if (searchTimer) clearTimeout(searchTimer);
					if (!value) {
						clearSuggestions(list);
						return;
					}
					searchTimer = setTimeout(async () => {
						const response = await fetch(`/api/games/search?term=${encodeURIComponent(value)}`);
						if (!response.ok) {
							renderSuggestions(list, []);
							return;
						}
						const data = await response.json();
						renderSuggestions(list, data.results || []);
					}, 300);
				});
			}

			function renderSuggestions(list, items) {
				if (!list) return;
				list.innerHTML = "";
				if (items.length === 0) {
					const empty = document.createElement("p");
					empty.className = "muted small";
					empty.textContent = "No matches yet.";
					list.appendChild(empty);
					return;
				}
				items.forEach((item) => {
					const button = document.createElement("button");
					button.type = "button";
					button.className = "suggestion-item";
					button.textContent = item.name;
					button.dataset.name = item.name;
					list.appendChild(button);
				});
			}

			function clearSuggestions(list) {
				if (!list) return;
				list.innerHTML = "";
			}
		</script>
	</body>
</html>

<style>
	:root {
		color-scheme: light;
		--ink: #1f2933;
		--muted: #5b6672;
		--tan: #dbe2ea;
		--ink-soft: #364152;
		--shadow: rgba(13, 30, 48, 0.18);
		--border: rgba(33, 51, 70, 0.14);
		--accent: #3b6ea5;
		--accent-dark: #2a5581;
		--radius: 22px;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
		background: radial-gradient(circle at top right, #f7fbff 0%, #eef2f6 55%, #e2e8f0 100%);
	}

	* {
		box-sizing: border-box;
	}

	body {
		margin: 0;
		color: var(--ink);
		background: linear-gradient(120deg, #f6f9fc 0%, #e9eff6 60%, #dde5ef 100%);
		min-height: 100vh;
	}

.hero {
	display: grid;
	max-width: 640px;
}

main {
	display: grid;
	gap: 3rem;
}

	.section {
		display: grid;
		gap: 1.5rem;
	}

	.section-head {
		display: grid;
		gap: 0.4rem;
	}

	.section-head p {
		color: var(--muted);
		max-width: 30rem;
	}

	.games-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
		gap: 1.2rem;
	}

	.game-card {
		padding: 1.2rem;
		border-radius: 18px;
		border: 1px solid var(--border);
		background: rgba(255, 255, 255, 0.72);
		animation: rise 0.5s ease both;
	}

	.card-row {
		display: flex;
		gap: 1rem;
		align-items: center;
		flex-wrap: wrap;
		margin: 0.6rem 0 0;
	}

	.chip {
		display: inline-flex;
		align-items: center;
		gap: 0.5rem;
		border-radius: 999px;
		padding: 0.4rem 0.85rem;
		font-size: 0.75rem;
		background: var(--tan);
		font-weight: 500;
	}

	.chip.subtle {
		background: rgba(255, 255, 255, 0.7);
		border: 1px solid var(--border);
	}

	.cta {
		display: inline-flex;
		align-items: center;
		justify-content: center;
		padding: 0.7rem 1.4rem;
		border-radius: 999px;
		font-weight: 600;
		font-size: 0.9rem;
		background: var(--accent);
		color: #fff;
		border: none;
		box-shadow: 0 12px 20px -16px var(--accent-dark);
		cursor: pointer;
		transition: transform 0.2s ease, box-shadow 0.2s ease;
		width: fit-content;
	}

	.cta:hover {
		transform: translateY(-1px);
		box-shadow: 0 18px 30px -22px var(--accent-dark);
	}

	.hidden {
		display: none;
	}

	.modal {
		border: none;
		border-radius: 20px;
		padding: 0;
		max-width: 520px;
		min-height: 450px;
		width: min(90vw, 520px);
		background: transparent;
	}

	.modal::backdrop {
		background: rgba(15, 25, 36, 0.4);
	}

	.modal-card {
		background: rgba(255, 255, 255, 0.88);
		border-radius: 20px;
		padding: 1.6rem;
		border: 1px solid var(--border);
		box-shadow: 0 30px 60px -40px var(--shadow);
		display: grid;
		gap: 1rem;
	}

	.modal-card header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 1rem;
	}

	.modal-card footer {
		display: flex;
		justify-content: flex-end;
		gap: 0.8rem;
	}

	.field {
		display: grid;
		gap: 0.3rem;
	}

	label {
		font-weight: 600;
		font-size: 0.85rem;
		color: var(--ink-soft);
	}

	input {
		width: 100%;
		border-radius: 12px;
		border: 1px solid var(--border);
		padding: 0.65rem 0.9rem;
		font-size: 0.9rem;
		font-family: inherit;
		background: rgba(255, 255, 255, 0.8);
		box-sizing: border-box;
	}

	.inline-search {
		margin: 1.5rem 0 2rem;
		background: rgba(255, 255, 255, 0.9);
		border: 1px solid var(--border);
		border-radius: 18px;
		padding: 1.2rem 1.4rem;
		box-shadow: 0 20px 40px -30px var(--shadow);
		display: grid;
		gap: 0.6rem;
		max-width: 520px;
	}

	.inline-label {
		font-weight: 600;
		color: var(--ink-soft);
	}

	.suggestions {
		display: grid;
		gap: 0.5rem;
		padding: 0.4rem;
		border-radius: 14px;
		border: 1px solid rgba(33, 51, 70, 0.08);
		background: rgba(247, 250, 255, 0.9);
	}

	.suggestions:empty {
		display: none;
	}

	.suggestion-item {
		text-align: left;
		border-radius: 10px;
		border: 1px solid transparent;
		padding: 0.55rem 0.85rem;
		background: rgba(255, 255, 255, 0.95);
		cursor: pointer;
		display: flex;
		align-items: center;
		gap: 0.55rem;
		font-weight: 500;
		color: var(--ink-soft);
	}

	.suggestion-item::before {
		content: "";
		width: 6px;
		height: 6px;
		border-radius: 999px;
		background: var(--accent);
		opacity: 0.5;
	}

	.suggestion-item:hover {
		border-color: rgba(59, 110, 165, 0.3);
		background: rgba(240, 246, 253, 0.95);
		transform: translateY(-1px);
		box-shadow: 0 10px 18px -18px var(--shadow);
	}

	.small {
		font-size: 0.9rem;
	}

	@keyframes rise {
		from {
			opacity: 0;
			transform: translateY(12px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

</style>
