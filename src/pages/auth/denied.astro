---
import AppHeader from "../../components/AppHeader.astro";
import AppFooter from "../../components/AppFooter.astro";
import "../../styles/base.css";

export const prerender = false;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<title>Game Club | Access</title>
	</head>
	<body>
		<AppHeader />

		<main>
			<div class="container centered-container">
				<section class="card denied-card">
					<h1>Looks like you are not a member of Game Club.</h1>
					<p class="muted">
						Please contact an administrator if you believe you've reached this page in error.
					</p>
					<a class="cta" href="/">Return Home</a>
				</section>
			</div>
		</main>
		<AppFooter />
	</body>
</html>

<style>
	.centered-container {
		display: grid;
		place-items: center;
		min-height: 60vh;
	}

	.denied-card {
		max-width: 520px;
		display: grid;
		gap: 1rem;
		text-align: center;
	}

	.denied-card h1,
	.denied-card p,
	.denied-card a {
		text-align: center;
	}

	.denied-card .cta {
		margin: 0 auto;
	}

	h1 {
		font-size: 1.7rem;
	}

</style>
